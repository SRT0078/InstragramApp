            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#4C4A4A"
                android:src="@drawable/ic_flower_img" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
