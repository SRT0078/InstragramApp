                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="View all 5 comments"
                    android:textColor="#8E8A8A"
                    android:textSize="15sp" />
                <TextView
